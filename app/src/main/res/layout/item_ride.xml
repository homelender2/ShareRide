<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row with Route and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="#4CAF50"
                android:visibility="visible" />

            <!-- Route and Fare Row -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Koramangala â†’ Electronic City"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Time and Distance Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today 6:30 PM"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableStart="@drawable/ic_schedule"
                        android:drawableTint="#666666"
                        android:drawablePadding="4dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="15.2 km"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawableStart="@drawable/ic_location_distance"
                        android:drawableTint="#666666"
                        android:drawablePadding="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fare and Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹40 each"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_fare_badge"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textSize="10sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- More Options Button -->
            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="More options"
                app:tint="#666666"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Passengers and Seats Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_passengers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2/3 passengers"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_people"
                android:drawableTint="#666666"
                android:drawablePadding="6dp" />

            <!-- Available seats indicator -->
            <TextView
                android:id="@+id/tv_seats_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 seats"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:background="@drawable/bg_seats_available"
                android:padding="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Names Row -->
        <TextView
            android:id="@+id/tv_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ‘¤ Priya, Amit"
            android:textSize="14sp"
            android:textColor="#333333"
            android:visibility="visible" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <!-- Secondary Action Button (Optional) -->
            <Button
                android:id="@+id/btn_details"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Details"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_button_outline"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Main Join Button -->
            <Button
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Join Ride"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_join"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:minWidth="100dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
